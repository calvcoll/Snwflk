{
  "manifest_version": 2,

  "name": "Snwflk",
  "description": "Additions to tweetdeck",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions" : [
    "tabs",
    "*://*.githubusercontent.com/*"
  ],
  "content_scripts": [{
      "matches" : ["https://tweetdeck.twitter.com/*"],
      "js" : ["js/jquery.min.js", "js/inject.js"]
  }],
  "web_accessible_resources": [
    "popup.html"
  ]
}
